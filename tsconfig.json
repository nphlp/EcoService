{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": true, // differenciate between null and undefined
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@actions/*": ["./services/actions/*"],
            "@app/*": ["./app/*"],
            "@api/*": ["./app/api/*"],
            "@fixtures/*": ["./fixtures/*"],
            "@class/*": ["./services/class/*"],
            "@comps/*": ["./components/*"],
            "@lib/*": ["./lib/*"],
            "@permissions/*": ["./permissions/*"],
            "@prisma/*": ["./prisma/*"],
            "@public/*": ["./public/*"],
            "@ui/*": ["./components/ui/*"],
            "@utils/*": ["./utils/*"],
            "@services/*": ["./services/*"],
            "@process/*": ["./process/*"],
            "@/*": ["./*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
